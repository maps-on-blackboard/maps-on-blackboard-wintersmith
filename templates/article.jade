extends layout

block append vars
  - bodyclass = 'article-detail'

block append head
  if page.metadata.localcss
    each file in page.metadata.localcss
      link(rel='stylesheet', href=file)
  if page.metadata.localjs
    each file in page.metadata.localjs
      script(type='text/javascript' src=file) 
block prepend title
| #{ page.title + " - "}

block header
  include author
  h1= page.title
